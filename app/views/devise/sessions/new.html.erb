<div class="container">
  <div class="row text-center">
    <div class="col-12 text-center"><h2>Log in</h2></div>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: 'col-12'}) do |f| %>
      <div class="field col-12">
        <%= f.label :Email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'w-100' %>
      </div>

      <div class="field col-12">
        <%= f.label :Password %><br />
        <%= f.password_field :password, autocomplete: "off", class: 'w-100' %>
      </div>

      <% if devise_mapping.rememberable? -%>
        <div class="field col-12">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end -%>

      <div class="actions col-12">
        <%= f.submit "Log in" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>